gem  'devise_invitable'

#Sidekiq for background process
gem "sidekiq"
#Print ruby object with color and indention in console
gem "awesome_print"
#web Server
gem "puma"
#Gem for stripe
gem "stripe"
# Use ActiveModel has_secure_password
# gem 'bcrypt', '~> 3.1.7'

# Use Unicorn as the app server
# gem 'unicorn'

