<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h5 class="top">Please do not leave blank:</h5>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, placeholder: "Patrick Long"  %>
  </div>

  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email, placeholder: "patrick@onerocket.io" %>
  </div>

  <div class="field">
    <%= f.label :user_info, "Team / Department"%>
    <%= f.collection_select :user_info, @team.where.not(name: 'All'),:name,:name, { include_blank: "Select a Team", disabled: 'false'}, { required: true}%>
    <p style="font-size: 0.8rem;"> <%= link_to 'OR create a new team', new_team_path %></p> <br>
  </div>

  <div class="field">
    <%= f.label :start_date %><br>
    <%= f.text_field :start_date, class: "datepicker"%>
  </div>



  <div class="actions centered">
    <input type="submit" value="Save Changes" class="btn btn-large" >
    <%= link_to 'Cancel', users_path, class: "btn btn-large" %>
  </div>
<% end %>
