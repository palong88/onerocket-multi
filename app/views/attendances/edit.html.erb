<div class="row">
  <!-- spaceholder -->
  <div class="col s12 m12 l2">&nbsp;</div>
  <div class="col s12 m12 l8">
    <div class="top centered"><h3>RSVP to <%= @event.name %></h3></div>
    <p><%= @event.name %> will be taking held on <%= @event.event_date %> at the <%= @event.location %>. Can you make it?</p>
    <%= form_for(@attendance) do |f| %>
    <div class="input-field col s12">
      <select name="attendance[rsvp]" id="attendance_rsvp">
        <option value="Invited" disabled selected>Invited</option>
        <option value="Going">Going</option>
        <option value="Not Going">Not Going</option>
      </select>
      <%= f.label :rsvp, 'RSVP' %>
      <%= f.hidden_field(:event_id)%>
      <%= f.hidden_field(:user_id)%>
      <%= f.submit 'Respond!', class:'btn btn-large' %>
    </div>
    <% end %>
  </div>
  <!-- spaceholder -->
  <div class="col s12 m12 l2">&nbsp;</div>
</div>

<script>
 $('.datepicker').pickadate({
    selectMonths: true, // Creates a dropdown to control month
    selectYears: 15 // Creates a dropdown of 15 years to control year
  });

</script>
