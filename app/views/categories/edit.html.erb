<div class="container">
  <div class="row">
    <div class="s12 m12 l2">&nbsp;</div>
    <div class="s12 m12 l8"><h4>Update a category for <%= category = params[:team] %></h4></div>
    <div class="s12 m12 l2">&nbsp;</div>
  </div>
</div>
<!--  FORM ELELEMNTS for Creating New Tasks and Updating Existing Tasks -->
<div class="row">
  <!-- spaceholder -->
  <div class="col s12 m12 l2">&nbsp;</div>
  <!-- form -->
  <div class="col s12 m12 l8">

    <%= form_for @category do |f| %>
    <% if @category.errors.any? %>
    <div id="error_explanation">
      <h4>Please fill out the following feilds:</h4>
      <ul>
        <% @category.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>

    <div class="field">
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </div>

      <!-- buttons to save -->
    <div class="row">
      <div class="actions col s12 centered">
        <%= link_to 'Cancel', :back, class: "btn btn-large" %>
        <input type="submit" value="Submit!" class="btn btn-large" >
      </div>
    </div>


  </div>
  <% end %>
</div>
  <!-- spaceholder -->
  <div class="col s12 m12 l2">&nbsp;</div>
</div>
