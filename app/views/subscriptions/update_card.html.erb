<div class="container">
  <div class="row">
    <div class="s12 m12 l2">&nbsp;</div>
    <div class="s12 m12 l8"><h4>Update Payment Details</h4></div>
    <div class="s12 m12 l2">&nbsp;</div>
  </div>
</div>

<!--  FORM ELELEMNTS for Creating New Tasks and Updating Existing Tasks -->
<div class="row">
  <!-- spaceholder -->
  <div class="col s12 m12 l2">&nbsp;</div>
  <!-- form -->
  <div class="col s12 m12 l8">


    <%= form_tag "/subscriptions/update_card_details", id: "payment-form" do %>
      <span class="payment-errors"></span>

      <div class="row">
         <label>
            <input type="text" size="20" data-stripe="number" placeholder= "Card Number">
         </label>
      </div>
      <div class="row">
        <div class = "col s3 ">
          <label>
            <input type="text" maxlength="2"  data-stripe="exp_month" placeholder="MM">
          </label>
        </div>
        <div class = "col s3 ">
          <label>
            <input type="text" maxlength="2"  data-stripe="exp_year" placeholder="YY">
          </label>
        </div>
        <div class = "col s3 ">
          <label>
            <input type="text" maxlength="3" data-stripe="cvc" placeholder="CVC">
          </label>
        </div>
      </div>
      <div class="row" >
        <input type="submit" class="btn btn-large" value="Update Payment Details"></input>
        <%= link_to 'Cancel', :back, class: "btn btn-large" %>
      </div>
    <% end %>
  </div>
  <!-- spaceholder -->
  <div class="col s12 m12 l2">&nbsp;</div>
</div>
