
<div class="row top">
  <!-- form -->
  <div class="col s12 m6 l6">
    <!-- Call to action -->
    <div class="row">
      <p class="flow-text" style="margin: 1em">
        You're just one step away from giving new hires the best start at your company. Let them to hit the ground running.
      </p>
    </div>
    <!-- Benefits -->
    <div class="row">
      <ul class="flow-text" style="margin: 1em">
        <li><i class="em em-thumbsup"></i> Automated employee onboarding</li>
        <li><i class="em em-thumbsup"></i> Great first impressions</li>
        <li><i class="em em-thumbsup"></i> Save lots of time</li>
      </ul>
    </div>
  </div>

  <div class="col s12 m6 l6">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <% if devise_error_messages? %>
       <script> Materialize.toast('Please fill out all fields!', 3000, 'rounded')</script>
      <% end %>
      <div class="row">
        <div class="field col s12">
          <%= f.label :name %>
          <%= f.text_field :name, autofocus: true, placeholder: "Patrick Long" %>
        </div>
      </div>

      <div class="row">
        <div class="field col s12">
          <%= f.label :email, "Email Address" %>
          <%= f.email_field :email, placeholder: "patrick@onerocket.io" %>
        </div>
      </div>

      <div class="row">
        <div class="field col s12">
          <%= f.label :password, "New Password" %>
          <% if @minimum_password_length %>
          <em><small>(<%= @minimum_password_length %> characters minimum)</small></em>
          <% end %>
          <%= f.password_field :password, autocomplete: "off" %>
        </div>
      </div>

      <div class="row">
        <div class="field col s12">
          <%= f.label :password_confirmation, "Confirm Your New Password" %>
          <%= f.password_field :password_confirmation, autocomplete: "off" %>
        </div>
      </div>

      <div class="row">
        <div class="field col s12">
          <%= f.label :subdomain, "Team URL" %>
          <%= f.text_field :subdomain, required: true %>
          <p>After this, you'll login from <b>https://<span id="subdomain"></span>.onerocket.io</b></p>
        </div>
      </div>

      <div class="row">
        <div class="actions col s12">
          <%= f.submit "Let's get started â†’", class: "btn btn-large" %>
        </div>
      </div>
    <% end %>

    <% unless request.subdomain.blank? || request.subdomain == "app" %>
      <%= render "devise/shared/links" %>
    <% end  %>
  </div>
</div>
<script>
$('#user_subdomain').keyup(function() {
  $('#subdomain').text($(this).val());
});
</script>
