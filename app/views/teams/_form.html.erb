



<!--  FORM ELELEMNTS for Creating New Tasks and Updating Existing Tasks -->
<div class="row">
  <!-- spaceholder -->
  <div class="col s12 m12 l2">&nbsp;</div>
  <!-- form -->
  <div class="col s12 m12 l8">

    <%= form_for @team do |f| %>
    <% if @team.errors.any? %>
    <div id="error_explanation">
      <h4>Please fill out the following feilds:</h4>
      <ul>
        <% @team.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>

    <div class="form-panel">
      <div class="row">
        <div class="input-field col s12 m12 l8">
          <%= f.text_field :name, placeholder: "HR / IT / Finance", required: true%>
          <%= f.label :title, "What is the team name?" %>
        </div>
      </div>
      <!-- buttons to save -->
      <div class="row">
        <div class="actions col s12 m12 l8 ">
          <%= link_to 'Cancel', teams_path, class: "btn btn-large" %>
          <input type="submit" value="Submit" class="btn btn-large" >
        </div>
      </div>

    </div>
    <% end %>
  </div>
  <!-- spaceholder -->
  <div class="col s12 m12 l2">&nbsp;</div>
</div>
